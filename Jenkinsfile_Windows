pipeline {
    agent any
    tools {
        git 'Default'  // Reference the named Git installation
    }
    environment {
        VENV_DIR = 'venv2'
    }
    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/IvanMok510/Form-handon.git', branch: 'main'
            }
        }
        stage('Setup Virtual Environment') {
            steps {
                bat '''
                if not exist %VENV_DIR% (
                    C:\\Users\\user\\AppData\\Local\\Programs\\Python\\Python312\\python.exe -m venv %VENV_DIR%
                )
                '''
            }
        }
        stage('Install Dependencies') {
            steps {
                powershell '''
                & .\\${env:VENV_DIR}\\Scripts\\Activate.ps1
                python -m pip install --upgrade pip
                pip install -r requirements.txt
                pip install pytest
                pip install pytest-html
                '''
            }
        }
        stage('Start Web Server') {
            steps {
                powershell '''
                Start-Job -ScriptBlock { python -m http.server 8000 } | Out-Null
                Start-Sleep -Seconds 5
                '''
            }
        }
        stage('Run Selenium Tests') {
            environment {
                HEADLESS = 'true'
            }
            steps {
                powershell '''
                & .\\${env:VENV_DIR}\\Scripts\\Activate.ps1
                if (!(Test-Path reports)) { New-Item -ItemType Directory -Path reports }
                if (!(Test-Path screenshots)) { New-Item -ItemType Directory -Path screenshots }
                python -m pytest test_all.py -v --html=reports/report.html --self-contained-html
                '''
            }
        }
    }
    post {
        always {
            script {
                bat '''
                for /f "tokens=2" %%a in ('netstat -ano ^| findstr :8000 ^| findstr LISTENING') do (
                    taskkill /F /PID %%a > nul 2>&1
                )
                taskkill /F /FI "WINDOWTITLE eq http.server*" > nul 2>&1
                '''
                echo 'Pipeline complete.'
            }
        }
        success {
            echo 'Tests passed!'
        }
        failure {
            echo 'Tests failed. Check console output.'
        }
    }
}
